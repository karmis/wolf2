{% block page_content -%}
    {{ form_start(form, { 'attr': {'class': 'form-horizontal', 'role': 'form', 'data-toggle':'validator' } }) }}
        <div class="form-group">
            <label for="input_name" class="col-md-2 control-label">Имя</label>

            <div class="col-md-10">
                {{ form_widget(form.name, { 
                    'attr': {
                            'class': 'form-control input-name-for-meta '~operationType,
                            'placeholder': 'Название статьи',
                            'required':'required',
                            'data-error':'Поле обязательно для заполнения'
                        } 
                    }) 
                }}
                <div class="help-block with-errors">
                    {{ form_errors(form.name) }}
                </div>
            </div>
        </div>

        <div class="form-group">
            <label for="input_name" class="col-md-2 control-label">Телефон</label>

            <div class="col-md-10">
                {{ form_widget(form.phone, { 
                    'attr': {
                            'class': 'form-control input-phone-for-meta '~operationType,
                            'placeholder': 'Название статьи',
                            'required':'required',
                            'data-error':'Поле обязательно для заполнения'
                        } 
                    }) 
                }}
                <div class="help-block with-errors">
                    {{ form_errors(form.phone) }}
                </div>
            </div>
        </div>

        <div class="form-group">
            <label for="input_name" class="col-md-2 control-label">Email</label>

            <div class="col-md-10">
                {{ form_widget(form.email, { 
                    'attr': {
                            'class': 'form-control input-email-for-meta '~operationType,
                            'placeholder': 'Название статьи',
                            'required':'required',
                            'data-error':'Поле обязательно для заполнения'
                        } 
                    }) 
                }}
                <div class="help-block with-errors">
                    {{ form_errors(form.email) }}
                </div>
            </div>
        </div>

        <div class="form-group">
            <label for="input_partition" class="col-md-2 control-label">Содержание</label>

            <div class="col-md-10">
                {{ form_widget(form.content, { 
                    'attr': {
                            'class': 'form-control',
                            'placeholder': 'Содержание',
                            'data-error':'Поле обязательно для заполнения'
                        } 
                    }) 
                }}
                <div class="help-block with-errors">
                    {{ form_errors(form.content) }}
                </div>
            </div>
        </div>

         <div class="clearfix"></div>
         <div class="row pull-left">
         	<a href="{{ path(route) }}" class="btn btn-link">Назад</a>
         </div>
