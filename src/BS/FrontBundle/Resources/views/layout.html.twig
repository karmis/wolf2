{% extends '::base.html.twig' %}
    {% set pRes = "bundles/bsfront" %}
    {% set pCom = "bower/components" %}
    {% block title %}
        Студия артистического фехтования "Волчий глаз"
    {% endblock %}

    {% block css %}
        {{ parent() }}

        <link rel="stylesheet" href="{{ asset(pCom~'/bootstrap/dist/css/bootstrap.min.css') }}"/>
        <link rel="stylesheet" href="{{ asset(pCom~'/bootstrap/dist/css/bootstrap-theme.min.css') }}"/>
        <link rel="stylesheet" href="{{ asset(pCom~'/owlcarousel/owl-carousel/owl.carousel.css') }}"/>
        <link rel="stylesheet" href="{{ asset(pCom~'/owlcarousel/owl-carousel/owl.theme.css') }}"/>
        <link rel="stylesheet" href="{{ asset(pCom~'/owlcarousel/owl-carousel/owl.transitions.css') }}"/>
        <link rel="stylesheet" href="{{ asset(pCom~'/wow/css/libs/animate.css') }}"/>
        <link rel="stylesheet" href="{{ asset(pCom~'/font-awesome/css/font-awesome.min.css') }}"/>
        <link rel="stylesheet" href="{{ asset(pCom~'/lightbox2/css/lightbox.css') }}"/>
        <link rel="stylesheet" href="{{ asset(pRes~'/css/css.css') }}"/>
        <link rel="stylesheet" href="{{ asset(pRes~'/lightGallery-master/light-gallery/css/lightGallery.css') }}"/>
        <link rel="stylesheet" href="{{ asset(pRes~'/css/custom.css') }}"/>

    {% endblock %}

    {% block js %}
        {{ parent() }}

        <script src="http://ajax.googleapis.com/ajax/libs/jquery/1.11.1/jquery.min.js"></script>
        <script>window.jQuery || document.write('<script src="{{ asset(pRes~'/js/jquery.min.js') }}"><\/script>')</script>
        <script type="text/javascript"
                src="{{ asset(pRes~'/js/jquery-ui-1.11.2.custom/jquery-ui.min.js') }}"></script>
        <script type="text/javascript"
                src="{{ asset(pCom~'/jquery.migrate/jquery-migrate-1.2.1.min.js') }}"></script>
        <script type="text/javascript"
                src="{{ asset(pCom~'/jquery.lazyload/jquery.lazyload.min.js') }}"></script>
        <script type="text/javascript"
                src="{{ asset(pCom~'/cheet.js/cheet.js') }}"></script>
        <script type="text/javascript"
                src="{{ asset(pCom~'/bootstrap/dist/js/bootstrap.min.js') }}"></script>

        <script type="text/javascript"
                src="{{ asset(pCom~'/jquery-backstretch/jquery.backstretch.min.js') }}"></script>
        <script type="text/javascript"
                src="{{ asset(pRes~'/js/detectmobilebrowser.js') }}"></script>
        <script type="text/javascript"
                src="{{ asset(pCom~'/owlcarousel/owl-carousel/owl.carousel.min.js') }}"></script>
        <script type="text/javascript"
                src="{{ asset(pCom~'/lightbox2/js/lightbox.min.js') }}"></script>
        <script type="text/javascript"
                src="{{ asset(pCom~'/wow/dist/wow.min.js') }}"></script>
        <script type="text/javascript"
                src="{{ asset(pRes~'/js/jquery.bxslider-rahisified.js') }}"></script>
        <script type="text/javascript"
                src="{{ asset(pRes~'/lightGallery-master/light-gallery/js/lightGallery.min.js') }}"></script>
        <script type="text/javascript"
                src="{{ asset(pRes~'/js/func.js') }}"></script>
        <script type="text/javascript"
                src="{{ asset(pRes~'/js/init-func.js') }}"></script>
        <script type="text/javascript"
                src="{{ asset(pRes~'/js/js.js') }}"></script>


        <script type="text/javascript">
        // $(document)
        //     .on('fos_comment_show_form', '.fos_comment_comment_reply_show_form', function (event, data) {
        //         // do stuffs
        // });
        </script>
    {% endblock %}


    {% block body %}
        <div class="background-image-overlay"></div>
        <div id="outer-background-container" data-default-background-img="{{ asset(pRes~"/images/bg/bg1.jpg") }}"
             style="background-image:url("{{ asset(pRes~"/images/bg/bg1.jpg") }}")";>
        </div>


        {#CP#}

        <!-- Outer Container -->
        <div id="outer-container">

            <!-- Left Sidebar -->
            <section id="left-sidebar">

                <div class="logo">
                    <a href="#bs-block-index" class="link-scroll">
                        <img src="{{ asset(pRes~"/images/logo.png") }}" class="img-responsive logo-image"
                             alt="Студия артистического фехтования «Волчий глаз»"/>
                        <img src="{{ asset(pRes~"/images/logo-color.png") }}" class="img-responsive logo-image color"
                             style="opacity: 0; margin-top: -141px;"
                             alt="Студия артистического фехтования «Волчий глаз»"/>
                    </a>
                </div>
                <!-- .logo -->

                <!-- Menu Icon for smaller viewports -->
                <div id="mobile-menu-icon" class="visible-xs" onClick="toggle_main_menu();">
                    <span class="glyphicon glyphicon-th">
                    </span>
                </div>

                {% include 'BSFrontBundle::Common/navbar.html.twig' %}
                <!-- #main-menu -->

            </section>
            <!-- #left-sidebar -->
            <!-- end: Left Sidebar -->

            <section id="main-content" class="clearfix">
                {% block content %}
                {% endblock content %}
            </section>
            <!-- #main-content -->

            <!-- Footer -->
            <section id="footer">

                <!-- Go to Top -->
                <div id="go-to-top" onclick="scroll_to_top();"><span class="icon glyphicon glyphicon-chevron-up"></span>
                </div>

                <ul class="social-icons">
                    <li><a href="#" target="_blank" title="Facebook"><img
                                    src=" {{ asset(pRes~"/images/icons/facebook.png") }}" alt="Facebook"></a></li>
                    <li><a href="#" target="_blank" title="Twitter"><img
                                    src=" {{ asset(pRes~"/images/icons/twitter.png") }}" alt="Twitter"></a></li>
                    <li><a href="#" target="_blank" title="Google+"><img
                                    src=" {{ asset(pRes~"/images/icons/googleplus.png") }}" alt="Google+"></a></li>
                </ul>

                <!-- copyright text -->
                <div class="footer-text-line">&copy; {{ "now"|date("Y") }} Brainstrap</div>
            </section>
            <!-- end: Footer -->

        </div><!-- #outer-container -->
        <!-- end: Outer Container -->

        <!-- Modal -->
        <!-- DO NOT MOVE, EDIT OR REMOVE - this is needed in order for popup content to be populated in it -->
        <div class="modal fade" id="common-modal" tabindex="-1" role="dialog" aria-hidden="true">
            <div class="modal-dialog">
                <div class="modal-content">
                    <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
                    <div class="modal-body">
                    </div>
                    <!-- .modal-body -->
                </div>
                <!-- .modal-content -->
            </div>
            <!-- .modal-dialog -->
        </div><!-- .modal -->

        {#/CP#}

    {% endblock %}