<div class="clearfix"></div>
<div class="modal-populate">
    <!-- Page Heading -->
    <div class="row">
        <div class="col-lg-12">
            <h1 class="page-header">
            {{ entity.caption }}
            </h1>
        </div>
    </div>
    <!-- /.row -->

    <!-- Content -->
    <div class="panel panel-default">
        <div class="panel-body">
            {{entity.content|raw}}
        </div>
    </div>
    <br />
    <hr />
    <br />
    <!-- Videos -->
    <div class="row modal-videos">
        {% if entity.videoGallery is defined and entity.videoGallery|length > 0 %}
        {% for key, video in entity.videoGallery %}
        <div class="col-md-3 col-lg-2 col-sm-4 col-xs-6 center-block">
            <div class="video-container">
                {{video.href|raw}}
            </div>
        </div>
        {% endfor %}
        {% endif %}
    </div>
    <br />
    <hr />
    <br />

    <div class="clearfix"></div>
    <!-- Photos -->
    <div class="row modal-photos">
        {% for key, photo in entity.photoGallery %}
        <div class="col-md-3 col-lg-2 col-sm-4 col-xs-6 center-block" style="padding:15px;">
            <a href="{{ asset('uploads/gallery/'~photo)|thumb(225, 225)|comur_getOrigin}}" data-lightbox="image-{{entity.id}}_{{key}}" data-title="{{entity.caption}}">
                <img src="{{ asset('uploads/gallery/'~photo)|thumb(225, 225)|imagine_filter('prev_on_page_item_slider') }}" class="img-responsive lazy">
            </a>
        </div>
        {% endfor %}
    </div>
    <br />
    <hr />
    <br />
    <!-- Comments -->
</div>