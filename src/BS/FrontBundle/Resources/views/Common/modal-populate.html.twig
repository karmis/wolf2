
<div class="clearfix"></div>

<div class="modal-populate">

    <!-- Page Heading -->
    <div class="row">
        <div class="col-lg-12">
            <h1 class="page-header">
                {{ entity.caption }}
            </h1>
        </div>
    </div>
    <!-- /.row -->

    <div id="modal-photos" class="row">
        {% for key, photo in entity.photoGallery %}
            <div class="col-md-3 col-lg-2 col-sm-4 col-xs-6 center-block" style="padding:15px;">
                <a href="{{ asset('uploads/gallery/'~photo) }}" data-lightbox="image-{{entity.id}}_{{key}}" data-title="{{entity.caption}}">
                    <img src="{{ asset('uploads/gallery/'~photo|thumb(150, 150)) }}" class="lazy">
                </a>
            </div>
        {% endfor %}
    </div>

    <br />
    <hr />
    <br />
    
    <div class="panel panel-default">
      <div class="panel-body">
        {{entity.content|raw}}
      </div>
    </div>



    <div id="modal-videos" class="row">
        {% if entity.videoGallery|length > 0 %}
            {% for key, video in entity.videoGallery %}
                <div class="col-md-3 col-lg-2 col-sm-4 col-xs-6 center-block">
                    <div class="video-container">
                        {{video.href|raw}}
                    </div>
                </div>
            {% endfor %}
            
            <br />
            <hr />
            <br />
        {% endif %}

    </div>

    <br />
    <hr />
    <br />

    <div class="clearfix"></div>
    
    <!-- <div class="clearfix"></div> -->

</div>
