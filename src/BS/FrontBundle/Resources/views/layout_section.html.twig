<article id="bs-block-{{ secId }}" class="section-wrapper clearfix"
         data-custom-background-img="{{ asset(secBg)|imagine_filter('background_image') }}">
    <div class="content-wrapper clearfix">
        <div class="col-sm-12 pull-right">

            <h1 class="section-title">{{ secCaption|raw }}</h1>

            <!-- feature columns -->
            <section class="feature-columns row clearfix">
                {% if secType is not defined %}
                    {% set secType = 'text' %}
                {% endif %}

                {% if secType == 'text' %}
                    {% include 'BSFrontBundle::Common/text.html.twig' %}
                {% elseif secType == 'events' %}
                    {% include 'BSFrontBundle::Common/grid-md-2.html.twig' %}
                {% elseif secType == 'blogs' %}
                    {% include 'BSFrontBundle::Common/blog-grid-md-3.html.twig' %}
                {% elseif secType == 'actions' %}
                    {% include 'BSFrontBundle::Common/grid-md-4.html.twig' %}
                {% elseif secType == 'promo' %}
                    {% include 'BSFrontBundle::Common/promo.html.twig' %}
                {% elseif secType == 'form' %}
                    {% include 'BSFrontBundle::Common/form.html.twig' %}
                {% else %}
                    {% include 'BSFrontBundle::Common/text.html.twig' %}
                {% endif %}
            </section>
        </div>
    </div>
</article>